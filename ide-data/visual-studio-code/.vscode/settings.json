{
    // These are configurations used for haxe completion.
    //
    // Each configuration is an array of arguments that will be passed to the Haxe completion server,
    // they should only contain arguments and/or hxml files that are needed for completion,
    // such as -cp, -lib, target output settings and defines.
    "haxe.displayConfigurations": [
        // if a hxml file is safe to use, we can just pass it as argument
        // you can add more than one configuration and switch between them
        ["export/flash/haxe/debug.hxml"],
        ["export/flash/haxe/release.hxml"],
        ["export/html5/haxe/debug.hxml"],
        ["export/html5/haxe/release.hxml"],
        ["export/windows/cpp/haxe/debug.hxml"],
        ["export/windows/cpp/haxe/release.hxml"],
        ["export/windows/neko/haxe/debug.hxml"],
        ["export/windows/neko/haxe/release.hxml"],
        ["export/linux/cpp/haxe/debug.hxml"],
        ["export/linux/cpp/haxe/release.hxml"],
        ["export/linux/neko/haxe/debug.hxml"],
        ["export/linux/neko/haxe/release.hxml"],
        ["export/mac/cpp/haxe/debug.hxml"],
        ["export/mac/cpp/haxe/release.hxml"],
        ["export/mac/neko/haxe/debug.hxml"],
        ["export/mac/neko/haxe/release.hxml"],
        ["export/android/haxe/debug.hxml"],
        ["export/android/haxe/release.hxml"],
        ["export/ios/haxe/debug.hxml"],
        ["export/ios/haxe/release.hxml"]
    ],
    "haxe.diagnosticsPathFilter": "${workspaceRoot}/source"
}